/* pages/kidInfo/kidInfo.wxss */
.page-kidInfo {
  width: 100%;
  background: #fff;
}

.header {
  padding: 0 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header .logo {
  width: 102px;
  height: 44px;
}

.header .garden-name {
  font-size: 15px;
  color: #5bc4be;
}

.kid-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.kid-info .kid-avatar {
  width: 116px;
  height: 116px; 
}

.kid-info .class-name {
  line-height: 24px;
  font-size: 13px;
  color: #5bc4be;
}

.notice {
  display: flex;
  padding: 0 10px;
  align-items: center;
}
.notice .notice-icon {
  width: 25px;
  height: 25px;
  margin-right: 15px;
}
.notice .notice-content {
  display: flex;
  flex-direction: column;
  height: 42px;
  overflow: hidden;
}

.notice .notice-content .notice-item {
  line-height: 42px;
  color: #505050;
  font-size: 14px;
}

.calendar {
  width: 320px;
  height: 200px;
  margin: 10px auto;
  background: #f2f2f2;
  border-radius: 5px;
}

.chart {
  width: 320px;
  height: 200px;
  margin: 10px auto;
  background: #f2f2f2;
  border-radius: 5px;
}

.gradient {
  padding: 0 30px;
}

.spaceAroundCenter {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: space-around;
}

 
.flex-item {
  /* flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1; */
  width: 14.2%;
}
 
.item-content {
  padding: 25rpx 0;
  text-align: center;
}
 /* 当前日期 */
.bk-color-day {
  color: #fff;
  border-radius: 50%;
  background-color: #ed7e2d;
}

/* 当前选中日期 */
.bk-color-dayClick {
  color: #fff;
  border-radius: 50%;
  background-color: #e5e5e5;
}
 
.item-content-current-day {
  flex-grow: 2;
}